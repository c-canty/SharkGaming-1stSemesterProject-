@page
@model SharkGaming.Pages.Login.LogInPageModel
@{
}


<div class="container text-center">
    <div>
        @Model.Message
    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="UserName" class="col-form-label text-white "></label>
            <div>
                <input asp-for="UserName" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label text-white"></label>
            <div>
                <input asp-for="Password" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <button class="btn btn-dark">Log in</button>        
            <a class="btn btn-dark" asp-area="" asp-page="/Customer/CreateCustomerPage">Create account</a>
        </div>
    </form>
</div>