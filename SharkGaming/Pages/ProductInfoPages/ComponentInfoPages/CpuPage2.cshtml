@page
@model SharkGaming.Pages.ProductInfoPages.ComponentInfoPages.CpuPage2Model
@{
}

@foreach (var x in Model.cpus)
{
    if (x.Id == 13)
    {
        <div class="text-center">
            <h1 style="color:white">
                @x.Name
            </h1>
        </div>

        <br />

        <form method="post">
            <div class="row text-center">

                <div class="column col-6">
                    <img src="@x.Img" style="width:65%" />
                </div>

                <div class="column col-6">
                    <h3 style="color:white">Description</h3>
                    <p style="color:white">@x.Description</p>
                    <h1 style="color:chocolate">Price: @x.Price KR.</h1>
                    <input type="submit" asp-page-handler="AddToCart" asp-for="productId" value="Add To Cart" class="btn btn-green" />
                    <input type="hidden" asp-for="productId">
                    <br />
                </div>
            </div>
        </form>


        <table class="table table-bordered center bg-dark text-white" style="width:85%">
            <thead>
                <tr>
                    <th style="width:50%">Specification</th>
                    <th style="width: 50%">Info</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>AMD compatible</td>
                    <td>
                        @if (x.AmdCompatible == true)
                        {
                            <text>True</text>
                        }
                        else
                        {
                            <text>False</text>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Intel compatible</td>
                    <td>
                        @if (x.IntelCompatible == true)
                        {
                            <text>True</text>
                        }
                        else
                        {
                            <text>False</text>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Clock speed</td>
                    <td>@x.ClockSpeed</td>
                </tr>
                <tr>
                    <td>Boost clock</td>
                    <td>@x.BoostClock</td>
                </tr>
                <tr>
                    <td>Core</td>
                    <td>@x.Core</td>
                </tr>
                <tr>
                    <td>Threads</td>
                    <td>@x.Threads</td>
                </tr>
                <tr>
                    <td>Unlocked for overclocking</td>
                    <td>
                        @if (x.UnlockForOC == true)
                        {
                            <text>True</text>
                        }
                        else
                        {
                            <text>False</text>
                        }
                    </td>
                </tr>
                <tr>
                    <td>PCI express</td>
                    <td>@x.PCIExpress</td>
                </tr>
                <tr>
                    <td>Thermal design power</td>
                    <td>@x.ThermalDesignPower</td>
                </tr>
            </tbody>
        </table>
    }
}
